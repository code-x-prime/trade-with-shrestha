# Server Environment Variables
# Copy this file to .env and fill in your values

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/dbname"

# JWT Secrets
JWT_SECRET="your-jwt-secret-key"
JWT_REFRESH_SECRET="your-jwt-refresh-secret-key"

# CORS Origins (comma-separated)
CORS_ORIGIN="http://localhost:3000"

# Razorpay Payment Gateway
RAZORPAY_KEY_ID="your-razorpay-key-id"
RAZORPAY_KEY_SECRET="your-razorpay-key-secret"

# Cloudflare R2 Storage
R2_ACCOUNT_ID="your-r2-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="your-bucket-name"
R2_PUBLIC_URL="https://your-bucket.r2.dev"

# Email (SMTP)
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER="your-email@example.com"
SMTP_PASSWORD="your-email-password"

# ========================================
# Bunny.net Stream Video Configuration
# ========================================
# Get these from your Bunny.net dashboard:
# 1. BUNNY_LIBRARY_ID: Your video library ID (from URL: dash.bunny.net/stream/XXXXXX)
# 2. BUNNY_API_KEY: Library API key (in video library settings â†’ API)
# 3. BUNNY_CDN_HOSTNAME: Linked pull zone hostname (e.g., vz-xxxxxxxx-xxx.b-cdn.net)

BUNNY_LIBRARY_ID="your-library-id"
BUNNY_API_KEY="your-library-api-key"
BUNNY_CDN_HOSTNAME="vz-xxxxxxxx-xxx.b-cdn.net"

# Node Environment
NODE_ENV="development"
PORT=4000
